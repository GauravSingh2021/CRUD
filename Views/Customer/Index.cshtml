@model IEnumerable<CRUDOperations.Models.Customer>
@{
}

<a asp-action="Create" asp-controller="Customer" class="btn btn-success">Create</a>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Salary</th>
        <th>City</th>
    </tr>
    @foreach(var cust in Model)
            {
<tr>
    <td>@cust.Id</td>
    <td>@cust.Name</td>
    <td>@cust.Email</td>
    <td>@cust.Mobile</td>
    <td>@cust.Salary</td>
    <td>@cust.City</td>
    <td>
        <a asp-action="Edit" asp-controller="Customer" class="btn btn-primary" asp-route-Id="@cust.Id" onclick="return confirm('Are you sure to update this record')">Update</a>
        <a asp-action="Delete" asp-controller="Customer" class="btn btn-danger" asp-route-Id="@cust.Id" onclick="return confirm('Are you sure to delete this record')">Delete</a>
        <a asp-action="Details" asp-controller="Customer" class="btn btn-warning" asp-route-Id="@cust.Id">Details</a>

    </td>
</tr>
            }
</table>
